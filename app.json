{
  "expo": {
    "name": "t-wallet",
    "slug": "t-wallet",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": false,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.twallet",
      "infoPlist": {
        "NFCReaderUsageDescription": "Cette application utilise NFC pour partager des badges d'acc√®s"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#000000"
      },
      "package": "com.twallet",
      "permissions": [
        "android.permission.NFC"
      ],
      "runtimeVersion": "1.0.0",
      "splash": {
        "image": "./assets/images/icon.png",
        "resizeMode": "contain",
        "backgroundColor": "#000000"
      },
      "intentFilters": [
        {
          "action": "android.nfc.action.NDEF_DISCOVERED",
          "category": ["android.intent.category.DEFAULT"]
        }
      ],
      "jsEngine": "hermes"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-splash-screen",
      "react-native-nfc-manager"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "updates": {
      "enabled": false
    },
    "extra": {
      "eas": {
        "projectId": "6844d12b-864a-4ad4-aa01-50b54062c768"
      }
    },
    "assetBundlePatterns": [
      "**/*"
    ]
  }
}
